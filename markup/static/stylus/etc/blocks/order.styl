.order
  margin-bottom 20px

.order__headline
  margin-bottom 35px
  
  font-size 32px
  line-height 38px
  color #f04034
  
.order__lists
  margin-bottom 60px
  padding-left 4%
  
.order__list-img-wrap
  width 275px
  margin-right 5.4%
  
.order__list
  margin-right 11.4%
  &:last-child
    margin-right 0
  
.order__list-items
  margin-bottom 20px
  &:last-child
    margin-bottom 0
  
.order__list-link
  position relative
  
  font-size 24px
  line-height 29px
  color #5c74c5
  
  transition 0.2s ease
  &::after
    content ''
    
    position absolute
    left 0
    right 0
    bottom -1px
    
    height 1px
    margin auto
    
    background-color #5c74c5
    
    transition 0.2s ease
  &:hover
    opacity 0.9
    &::after
      transform translateY(5px)
      
      opacity 0
      
.order__list-link-icon
  position absolute
  top 5px
  left -22px
  bottom 0
  
  display block
  width 9px
  height 12px
  margin auto
  &::before,
  &::after
    center-absolute()
    
    content ''
    
    width 100%
    height 2px
    
    background-color #ef4943
  &::before
    bottom 4px
    
    transform rotate(45deg)
  &::after
    bottom -6px
    
    transform rotate(-45deg)
    
.order__table
  width 100%
   
.order__table-description-tr
  background-color #fcefc4
  &:nth-child(2n)
    background-color #fcf6df
    
.order__table-td
  position relative
  &:nth-child(1)
    width 33%
    .order__table-title
      &--headline
        border-left 3px solid #ed423b
  &:last-child
    width 25%
    .order__table-title
      &--headline
        border-right 3px solid #ed423b
  &--price
    &:hover
      .order__table-buy
        display block

.order__table-title
  padding 20px 0
  
  font-size 21px
  line-height 25px
  color #000000
  
  border 3px solid #ffffff
  border-left none
  border-right none
  border-bottom none
  &--headline
    border 3px solid #ed423b
    border-left none
    border-right none
    
.order__table-prices-list
  display none
  margin-bottom 10px
    
.order__table-prices-items
  flex-grow 1
    
.order__table-prices-input
  &:checked ~ .order__table-prices-weight
    color #f04034
    &::before
      border 3px solid #f04034
  &:checked ~ .order__table-prices-currency
    color #f04034
    
.order__table-prices-weight
  position relative
  
  margin-bottom 5px
  padding 8px 0
  
  cursor pointer
  &::before
    center-absolute()
    
    content ''
    
    border 1px solid #dcdcdc
    
.order__table-prices-buy-wrap
  display none
  margin-bottom 10px
  padding-left 10px
  padding-right 10px
    
.order__table-prices-buy
  display none
  padding 15px 0
  padding-top 10px
  
  color #000
  
  background-color #fed037
  
  border-radius 5px
    
.order__table-top-icon
  position absolute
  top 0
  left 30px
  bottom 0
  
  width 32px
  height 32px
  margin auto
  
  background-image url('%=static=%content/badge.svg')
  background-repeat no-repeat
  background-size 100% auto
  
.order__table-prices-mobile
  display none
  
.order__table-buy
  position absolute
  top 11px
  left 0
  right 0
  
  display none
  width 162px
  padding 15px 0
  padding-top 10px
  margin auto
  
  color #000000
  
  background-color #fed037
  
  border-radius 5px
  
  transition 0.2s ease
  &:hover
    background-color #f2c12c
  
.order__table-price
  padding 21px 0
  
  color #000000
  
  border 3px solid #ffffff
  border-left none
  border-right none
  border-bottom none
  &--headline
    border 3px solid #ed423b
    border-left none
    border-right none
    
@media(max-width 1190px)
  .order__table-price
    font-size 17px
    line-height 20px
    &--headline
      font-size 17px
      line-height 20px
      
  .order__table-title
    padding 21px 0
    font-size 17px
    line-height 20px
    
  .order__table-top-icon
    left 10px
    
@media(max-width 1160px)
  .order__list-link
    transition none
    &::after
      transition none
      
  .order__table-buy
    transition none
    
@media(max-width 1070px)
  .order__lists
    padding-left 0
    
@media(max-width 1000px)
  .order__list-img-wrap
    display none
    
  .order__lists__wrap
    justify-content center
    
  .order__list-items
    margin-left 22px
    
@media(max-width 960px)
  .order__table-td
    &:nth-child(1)
      width 60%
    &:nth-child(4)
      .order__table-price
        &--headline
          border-right 3px solid #ed423b
    &:last-child
      display none
      
  .order__table-buy
    top 17px
    
    width 100px
    padding 10px 0
    padding-top 5px
    
    font-size 16px
    line-height 19px
    
@media(max-width 900px)
  .order__table-buy
    top 22px
    
    width 75px
    padding 8px 0
    padding-top 3px
    
    font-size 12px
    line-height 15px
    
@media(max-width 800px)
  .order__headline
    font-size 25px
    line-height 28px
    
@media(max-width 750px)
  .order__lists
    margin-bottom 40px
  
  .order__list-items
    margin-bottom 10px
  
  .order__list-link
    font-size 19px
    line-height 22px
    
@media(max-width 650px)
  .order__headline
    display none
    &--table
      display block
      margin-bottom 25px
    
  .order__lists
    display none
    
@media(max-width 620px)
  .order__table-td
    &:nth-child(2),
    &:nth-child(3),
    &:nth-child(4)
      display none
    &:nth-child(1)
      .order__table-title--headline
        border-right 3px solid #ed423b
        
  .order__table-top-icon
    top 25px
    bottom auto
    
  .order__table-prices-mobile
    display block
    
  .order__table-prices-list
    display flex
    
  .order__table-prices-buy-wrap
    display block
    
  .order__table-prices-buy
    display block
    
@media(max-width 420px)
  .order__headline
    font-size 22px
    line-height 25px
    
    
    