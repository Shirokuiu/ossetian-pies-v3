.user-block
  margin-bottom 15px
  padding-top 7px
  padding-left 3.9%
  padding-right 2%
  padding-bottom 7px
  
  border 3px solid #ed423b
  
.user-block-link,
.user-block__tel-feedback
  position relative
  
  font-size 21px
  line-height 25px
  color #f04034
  &::after
    content ''
    
    position absolute
    left 0
    right 0
    bottom -1px
    
    height 1px
    margin auto
    
    background-color #f04034
    
    transition 0.2s ease
  &:hover
    &::after
      transform translateY(5px)
      
      opacity 0
  
.user-block__basket
  position relative
  
  box-sizing border-box
  min-width 130px
  margin-left 4.5%
  padding-top 9px
  padding-left 10px
  padding-right 10px
  padding-bottom 5px
  
  background-color #feedae
  
  transition 0.2s ease
  &:hover
    background-color #FEE37E
    
.user-block__basket-count
  position absolute
  top 4px
  right 4px
  
  padding 3px 10px
   
  color #ffffff
  
  background-color #f97a3b
  
.user-block__basket-icon
  display block
  width 40px
  height 40px
  margin 0 auto 5px auto
  
  background-image url('%=static=%content/shopping-basket.svg')
  background-repeat no-repeat
  background-size 100% auto
    
.user-block__basket-price
  font-size 24px
  line-height 29px
  color #000000
  &--text
    margin-left 5px
  
.user-block__tel
  margin-left 2.5%
  
.user-block__tel-link
  margin-bottom 5px
  
  font-size 29px
  line-height 34px
  color #f04034
  
.user-block__tel-feedback
  align-self flex-start