.main-nav
  padding 10px 25px
  padding-bottom 0
  
  background-color #feedae
  box-shadow 0px 2px 2px -1px rgba(0,0,0,0.3)

.main-nav__list-headline
  margin-right 25px
  
  font-size 16px
  color #000000

.main-nav__items
  margin-right 35px
  &:last-child
    margin-right 0

.main-nav__link
  position relative
  
  display inline-block
  padding-bottom 10px
  
  color #99999a
  
  transition 0.3s ease
  &::after
    content ''
    
    position absolute
    left 0 
    right 0
    bottom 0
    
    height 5px
    margin auto
    
    background-color #ee423b
    
    opacity 0
    
    transform translateY(10px)
    transition 0.3s ease
  &:hover
    color #f04034
    &::after
      opacity 1
    
      transform translateY(0)
  &--active
    color #f04034
    &::after
      opacity 1
    
      transform translateY(0)
      
.main-nav__border
  width 1px 
  height 23px
  margin 0 1.5%
  
  background-color #bdb66f