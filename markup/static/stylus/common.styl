// Common styles of the project

html,
body
  height 100%

.wrapper
  display flex
  flex-direction column
  height 100%

.content
  flex 1 0 auto

.page-footer
  flex 0 0 auto
  
.container
  max-width 1725px
  margin 0 auto
  padding 0 20px
  
img
  width 100%
  height auto
  
@media(max-width 1220px)
  .container
    &--basket
      padding 0
  
@media(max-width 960px)
  .container
    padding 0 10px
    &--basket
      padding 0
    
@media(max-width 420px)
  .container
    &--order
      padding 0
    &--basket
      padding 0
